{
  "testEnvironment": "node",
  "testMatch": [
    "**/tests/**/*.test.js"
  ],
  "collectCoverageFrom": [
    "app/**/*.js",
    "!app/app.js",
    "!app/db/**/*.js"
  ],
  "coverageDirectory": "coverage",
  "verbose": true,
  "testTimeout": 30000,
  "clearMocks": true,
  "resetMocks": true,
  "restoreMocks": true,
  "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
  "forceExit": true,
  "detectOpenHandles": true
}
