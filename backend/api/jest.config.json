{
  "testEnvironment": "node",
  "testMatch": [
    "**/tests/**/*.test.js"
  ],
  "collectCoverageFrom": [
    "app/**/*.js",
    "!app/app.js",
    "!app/db/**/*.js"
  ],
  "coverageDirectory": "coverage",
  "verbose": true,
  "testTimeout": 10000,
  "clearMocks": true,
  "resetMocks": true,
  "restoreMocks": true
}
